{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "incremental": true,
    "composite": false,
    "checkJs": false,
    "allowJs": true,
    "disableReferencedProjectLoad": true,
    "disableSizeLimit": true,
    "newLine": "lf",
    "emitBOM": false,
    "listEmittedFiles": false,
    "watch": false,
    "removeComments": true,
    "moduleDetection": "auto",
    "types": [
      "vite/client"
    ],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "jsxImportSource": "react",
    "reactNamespace": "React",
    "baseUrl": "./src/",
    "paths": {
      "@components/*": ["./components/*"],
      "@components": ["./components/index"],
      "@containers/*": ["./containers/*"],
      "@containers": ["./containers/index"],
      "@icons/*": ["./icons/*"],
      "@icons": ["./icons/index"],
      "@forms/*": ["./forms/*"],
      "@forms": ["./forms/index"],
      "@lib/*": ["./lib/*"],
      "@lib": ["./lib/index"],
      "@pages/*": ["./pages/*"],
      "@pages": ["./pages/index"],
      "@styles/*": ["./styles/*"],
      "@styles": ["./styles/index"],
      "@protected-routes/*": ["./protected-routes/*"],
      "@protected-routes": ["./protected-routes/index"],
      "@constants/*": ["./lib/constants/*"],
      "@constants": ["./lib/constants/index"],
      "@enums/*": ["./lib/enums/*"],
      "@enums": ["./lib/enums/index"],
      "@types/*": ["./lib/types/*"],
      "@types": ["./lib/types/index"],
      "@auth/*": ["./lib/auth/*"],
      "@auth": ["./lib/auth/index"],
      "@clients/*": ["./lib/clients/*"],
      "@clients": ["./lib/clients/index"],
      "@helpers/*": ["./lib/helpers/*"],
      "@helpers": ["./lib/helpers/index"],
      "@hooks/*": ["./lib/hooks/*"],
      "@hooks": ["./lib/hooks/index"],
      "@slices/*": ["./lib/slices/*"],
      "@slices": ["./lib/slices/index"],
      "@stores/*": ["./lib/stores/*"],
      "@stores": ["./lib/stores/index"],
      "@ws/*": ["./lib/ws/*"],
      "@ws": ["./lib/ws/index"],
    },

    /* Linting */
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noStrictGenericChecks": false,
    "allowUnusedLabels": true,
    "allowUnreachableCode": false,
    "noEmitHelpers": false,
    "noEmitOnError": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "useUnknownInCatchVariables": true,
    "noPropertyAccessFromIndexSignature": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/node_modules"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
